<div class="row justify-content-center">
  <div class="col-md-8">
    <%= simple_form_for [flat, booking] do |f| %>
      <%= f.input :start_date, label: "Dates", as: :string, required: false, input_html: { id: "range_start" } %>
      <%= f.hidden_field :end_date, as: :string, required: false, input_html: { id: "range_end" } %>
      <%= f.submit text, class: 'btn btn-principal' %>
    <% end %>
  </div>
</div>
