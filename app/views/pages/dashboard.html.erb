<h2>My dashboard</h2>

<h3>My flats</h3>

<% if @flats.empty? %>
  <p>No flat yet</p>
  <%= link_to new_flat_path do %>
    <button class="btn btn-principal">Add a flat now</button>
  <% end %>
<% else %>
  <div class="cards">
    <% @flats.each do |flat| %>
      <%= link_to flat_path(flat.id) do %>
        <div class="card">
          <li>address : <%= flat.address %></li>
          <li>room : <%= flat.room %></li>
          <li>surface : <%= flat.surface %></li>
          <li>price : <%= flat.price %></li>
          <li>max_guests : <%= flat.max_guests %></li>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>

<h3>My bookings</h3>

<% if @bookings.empty? %>
  <p>No booking yet</p>
  <%= link_to flats_path do %>
    <button class="btn btn-principal">Book now</button>
  <% end %>
<% else %>
  <% @bookings.each do |booking| %>
    <div class="card">
      <li>flat : <%= booking.flat.address %></li>
      <li>start date : <%= booking.start_date %></li>
      <li>end date : <%= booking.end_date %></li>

      <%= link_to booking_path(@booking),
          method: :delete,
          data: { confirm: "Are you sure?" } do %>
        <button class="btn btn-principal">Delete</button>
      <% end %>

    </div>
  <% end %>
<% end %>
